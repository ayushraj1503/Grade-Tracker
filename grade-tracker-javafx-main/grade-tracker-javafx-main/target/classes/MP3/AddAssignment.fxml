<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<GridPane fx:controller="MP3.AddAssignmentController" 
    xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
    styleClass="root">
    
    <!-- New Class -->
    <Label fx:id="assignmentLabel" text="New Assignment:"
        GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="assignmentField" 
        GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <!-- Teacher Name -->
    <Label fx:id="gradeLabel" text="Grade:" 
        GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="gradeField" 
        GridPane.columnIndex="1" GridPane.rowIndex="1" />
    
    <!-- Add Class Btn -->
    <HBox alignment="bottom_right" spacing="10"
        GridPane.columnIndex="0" GridPane.rowIndex="2">
        <Button fx:id="cancelAssignmentBtn" text="Cancel"
            onAction="#handleCancelAssignmentBtn" />
        <Button fx:id="createAssignmentBtn" text="Add Assignment"
            onAction="#handleCreateAssignmentBtn" />
    </HBox>

    <!-- Stylesheets -->
    <stylesheets>
      <URL value="@AddAssignment.css" />
    </stylesheets>

</GridPane>
